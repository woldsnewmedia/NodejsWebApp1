<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../partials/head') %>
</head>
<body>

    <header>
        <%- include('../partials/header') %>
    </header>

    <div class="main-outer-div">

        <div class="container">

            <h1>MongoDB</h1>

            <p>The following documents are in the MongoDB People collection.</p>

            <div class="float-right mb-2">
                <a href="/mongodb-new/" class="btn btn-outline-success btn-sm"><i class="fa fa-plus"></i></a>
            </div>

            <table class="table w-100">
                <thead class="bg-light">
                    <tr>
                        <th>Name</th>
                        <th class="hidden-xs">Job Title</th>
                        <th class="hidden-xs hidden-sm">Image</th>
                        <th class="mongo-table-tool-width"></th>
                    </tr>
                </thead>

                <tbody>
                    <% if(sqlresult.length>0) { %>

                    <% sqlresult.forEach((p, index) => { %>
            
                        <tr>
                            <td><%=p.Name%></td>
                            <td class="hidden-xs"><%=myutils.strLeft(p.JobTitle,32)%></td>
                            <td class="hidden-xs hidden-sm">
                                <img src="<%=p.Image%>?i=<%=index%>" class="mongo-list-img shadow" />
                            </td>
                            <td class="mongo-table-tool-width">
                                <div class="float-right">
                                    <a href="/mongodb/<%=p._id%>" class="btn btn-outline-info btn-sm"><i class="fa fa-eye"></i></a>
                                    <a href="/mongodb-modify/<%=p._id%>" class="btn btn-outline-warning btn-sm"><i class="fa fa-edit"></i></a>
                                    <a onclick="return confirm('Are you sure?')" href="/mongodb-remove/<%=p._id%>" class="btn btn-outline-danger btn-sm mongodb-delete-button"><i class="fa fa-trash"></i></a>
                                </div>
                            </td>
                        </tr>

                    <% }); %>

                <% } else { %>

                    <tr>
                        <td colspan="5">
                            <span class="text-center mb-5">Nothing found ..... <i class="fa fa-frown"></i></span>
                        </td>
                    </tr>

                    <% } %>

                </tbody>

            </table>

        </div>

    </div>

    <%- include('../partials/footer') %>

</body>
</html>
